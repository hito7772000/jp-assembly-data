{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bill",
  "type": "object",
  "required": ["id", "title"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "source": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "retrieved_at": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
